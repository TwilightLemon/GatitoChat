<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GatitoChat.Views.ChatBubble">
   <Panel Margin="0 12 0 12">
       <TextBlock x:Name="Username" HorizontalAlignment="Left" VerticalAlignment="Top"/>
       <Border x:Name="MsgContainer" HorizontalAlignment="Left" VerticalAlignment="Stretch"
               Margin="0 24 40 0" Padding="8 4"
               CornerRadius="8"
               Background="{DynamicResource MaskBrush}">
		   <SelectableTextBlock x:Name="MsgTb" Background="Transparent" TextWrapping="Wrap"/>
       </Border>
	   
   </Panel>
</UserControl>
